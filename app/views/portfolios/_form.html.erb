<%= form_for(portfolio_item) do |form| %>

  <div class="form-group">
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title, class: 'form-control w-50' %>
  </div>

  <div class="form-group">
    <%= form.label :subtitle, style: "display: block" %>
    <%= form.text_field :subtitle, class: 'form-control w-50' %>
  </div>

  <div class="form-group pb-3">
    <%= form.label :body, style: "display: block" %>
    <%= form.text_area :body, class: 'form-control w-50', rows: 5 %>
  </div>

  <div class="form-group pb-3" >
    <%= form.file_field :main_image %>
    <%= form.file_field :thumb_image %>
  </div>


  <hr>
  <h4 class="pt-3">Technologies used:</h4>

  <div>
    <%= form.fields_for :technologies do |technology_form| %>
      <div class="form-group">
        <%= technology_form.label :name %>
        <%= technology_form.text_field :name, class: 'form-control w-25' %>
      </div>
    <% end %>
  </div>
  

  <div>
    <%= form.submit 'Save portfolio item', class:'btn btn-primary mt-4' %>
  </div>
<% end %>
