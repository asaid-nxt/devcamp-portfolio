<div class="col">
  <div class="card shadow-sm" data-id="<%= portfolio_item.id %>">

    <%= image_tag portfolio_img(portfolio_item.thumb_image_url, 'thumb'), width: 420, height: 240 %>

    <div class="card-body">
      <p class="card-text">
        <span><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item), class: 'text-decoration-none' %></span>
        <span><%= portfolio_item.subtitle %></span>
      </p>
    </div>

  </div>
</div>

  