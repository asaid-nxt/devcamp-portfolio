<article class="blog-post">
<div class="d-flex justify-content-between">
  <h2 class="display-5 link-body-emphasis mb-1"><%= link_to blog.title, blog %></h2>
  <span class="float-end mt-2">
    <%= link_to fa_icon('pencil-square-o'), edit_blog_path(blog) if logged_in?(:admin) %>
    <%= link_to fa_icon('trash'), blog, method: :delete, data: {confirm: 'are you sure you want to delete this post ?'} if logged_in?(:admin) %>
  </span>
  </div>

  <% if current_page?(blog_path(blog)) %>
    <nav aria-label="breadcrumb" class="pt-3 fs-5">
      <ol class="breadcrumb">
        <%= link_to 'Home', root_path, class: "breadcrumb-item" %>
        <%= link_to blog.topic.title, topic_path(blog.topic), class: "breadcrumb-item" %>
        <span class="breadcrumb-item active"><%= blog.title %></span>
        
      </ol>
    </nav>
  <% end %>

  <p class="blog-post-meta mt-2">Published <%= distance_of_time_in_words(blog.created_at, Time.now) %> ago</p>

  <br>
  <p><%= markdown blog.body %></p>


</article> 
