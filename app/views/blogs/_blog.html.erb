<div id="<%= dom_id blog %>">
  <p>
    <strong>Title:</strong>
    <%= blog.title %>
  </p>

  <p>
    <strong>Date:</strong>
    Published <%= distance_of_time_in_words(blog.created_at, Time.now) %> ago
  </p>

  <p>
    <strong>Body:</strong>
    <%= blog.body %>
  </p>

  <%= link_to blog.status, toggle_status_blog_path(blog) if logged_in?(:admin) %>
    <p>
      <%= link_to "Show this blog", blog %>
    </p>

</div>
