<article class="blog-post">
  <div class="row">
    <div class="col-md-10">
      <h2 class="display-5 link-body-emphasis mb-1"><%= link_to blog.title, blog %></h2>
    </div>

    <div class="col-md-2 mt-2">
      <span class="float-end">
        <%= link_to fa_icon('pencil-square-o'), edit_blog_path(blog) if logged_in?(:admin) %>
        <%= link_to fa_icon('trash'), blog, method: :delete, data: {confirm: 'are you sure you want to delete this post ?'}, class: "text-danger" if logged_in?(:admin) %>
      </span>
    </div>
  </div>

  <p class="blog-post-meta">Published <%= distance_of_time_in_words(blog.created_at, Time.now) %> ago</p>
  
  <%= render "breadcrumb", blog: blog %>


  
  <p><%= markdown blog.body %></p>


</article> 
